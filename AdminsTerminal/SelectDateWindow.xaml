<Window x:Class="AdminsTerminal.SelectDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminsTerminal"
        mc:Ignorable="d"
            Title="Выбор даты" Height="300" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF627AC7">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Выберите новую дату:" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <ComboBox Name="CbDates" Grid.Row="1" Width="220" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3">
            <Button Content="ОК" Click="Ok" Width="100" FontSize="20" Foreground="White" Background="#0224a6"/>
            <Button Content="Отмена"  Click="Cancel" Width="100" FontSize="20" Foreground="#0224a6" Background="white"/>
        </StackPanel>
    </Grid>
</Window>
